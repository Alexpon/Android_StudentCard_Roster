<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mbp.alexpon.com.cardreader.Perso">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perso"
        android:id="@+id/title"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/perso_cardNum"
        android:textSize="20sp"
        android:id="@+id/card"
        android:layout_below="@+id/title"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textSize="20sp"
        android:id="@+id/card_id"
        android:layout_alignTop="@+id/card"
        android:layout_toRightOf="@+id/card"
        android:layout_toEndOf="@+id/card" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/perso_studentId"
        android:textSize="20sp"
        android:id="@+id/student_id"
        android:layout_below="@+id/card"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="@string/perso_hintID"
        android:textSize="20sp"
        android:ems="10"
        android:id="@+id/et_student_id"
        android:layout_below="@+id/card"
        android:layout_alignLeft="@+id/card_id"
        android:layout_alignStart="@+id/card_id" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/perso_studentname"
        android:textSize="20sp"
        android:id="@+id/student_name"
        android:layout_below="@+id/student_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="@string/perso_hintName"
        android:textSize="20sp"
        android:ems="10"
        android:id="@+id/et_student_name"
        android:layout_below="@+id/student_id"
        android:layout_toRightOf="@+id/student_id"
        android:layout_toEndOf="@+id/student_id" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/perso_department"
        android:textSize="20sp"
        android:id="@+id/department"
        android:layout_below="@+id/student_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="@string/perso_hintDep"
        android:textSize="20sp"
        android:ems="10"
        android:id="@+id/et_department"
        android:layout_below="@+id/student_name"
        android:layout_toRightOf="@+id/student_id"
        android:layout_toEndOf="@+id/student_id" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/sync_cancel"
        android:id="@+id/perso_cancel"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/department"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/perso_submit"
        android:id="@+id/perso_submit"
        android:layout_alignTop="@+id/perso_cancel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
