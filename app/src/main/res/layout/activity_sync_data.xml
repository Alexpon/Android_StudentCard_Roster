<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mbp.alexpon.com.cardreader.SyncData">

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sync_title"
        android:textSize="30sp"
        android:id="@+id/sync_title"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/sync_pic"
        android:src="@drawable/synchronize"
        android:layout_below="@+id/sync_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sync_class"
        android:id="@+id/col_title"
        android:gravity="center"
        android:layout_above="@+id/spinner"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sync_cancel"
        android:id="@+id/sync_cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/sync_pic"
        android:layout_alignStart="@+id/sync_pic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sync_submit"
        android:id="@+id/sync_submit"
        android:layout_alignTop="@+id/sync_cancel"
        android:layout_alignRight="@+id/sync_pic"
        android:layout_alignEnd="@+id/sync_pic" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:gravity="center"
        android:id="@+id/show_data_num"
        android:layout_above="@+id/sync_cancel"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="#3333cc"
        android:popupBackground="#3333cc"
        android:id="@+id/spinner"
        android:layout_above="@+id/show_data_num"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
